<% if current_user %>
<div id="createRibbit" class="panel-right">
    <h1>Create a tweet</h1>
    <p>
    <%= form_for @ribbit do |f| %>
        <%= f.text_area :content, class: 'ribbitText' %>
        <%= f.submit "Post it!" %>
    <% end %>
    </p>
</div>
<% end %>
<div class="panel-left">
    <h1>All tweets</h1>
    <% @ribbits.each do |ribbit| %>
        <div class="ribbitWrapper">
            <a href="<%= user_path ribbit.user %>">
            <img class="avatar" src="<%= ribbit.user.avatar_url %>">
            <span class="name"><%= ribbit.user.name %></span>
            </a>
            | <%= ribbit.user.email %>
            <span class="time"><%= time_ago_in_words(ribbit.created_at) %></span>
            <p> <%= ribbit.content %> </p>
          <% if current_user == ribbit.user %>
              <%= link_to 'Delete', ribbit_path(ribbit.id),confirm: 'Are you sure?', method: :delete %>
          <% end %>
        </div>
    <% end %>
</div>